<style>
	#form{
		box-shadow: 20px 20px 80px;
		border-radius: 30px 30px;
	}

	@media(max-width : 770px){
		#form{
			font-size: 1rem;
			border-radius: 40px 40px;
		}
		#form > h2{
			font-size: 1.6rem;
		}	
	}

</style>

<div class= "d-flex justify-content-center m-5 h5">
	<form method= 'POST' class= 'container p-4 col-lg-4 col-md-6' id= "form">
		
		<h2 class= 'text-center mb-4'>
			Login
		</h2>
		
		<div class= 'form-group'>
			<label for= "email">Email</label>
			<input type= 'email' placeholder= 'Your Email ID' name= 'email' class= 'form-control'  autofocus required>
		</div>
		
		<div class= 'form-group'>
			<label for= "password" >Password</label>
			<input type= 'password' placeholder= 'Your password' name= 'password' required class= 'form-control'>
		</div>
		
		<div class= 'text-center mb-3'>
			Need to register? <a href= '/register'>Register</a>
		</div>
		
		<div class= 'form-group row'>
			<button type= 'submit' class= 'col-md-4 offset-md-4 btn btn-primary col-6 offset-3'>Submit</button>
		</div>

	</form>
	
</div>
